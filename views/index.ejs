<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Anime Downloader</title>
  <link rel="icon" type="image/svg+xml" href="/images/favicon.svg">
  <link rel="stylesheet" href="/css/tailwind.css">
  <link rel="stylesheet" href="/css/custom-theme.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>

<body class="bg-body text-text font-satoshi min-h-screen flex flex-col">
  <%- include('partials/header') %>

  <!-- Hero Carousel -->
  <% if (featuredAnimes && featuredAnimes.length> 0) { %>
    <section class="relative mb-12 rounded-lg overflow-hidden shadow-2xl" style="height: 60vh; min-height: 400px;">
      <div class="relative w-full h-full">
        <div class="flex transform-gpu transition-transform duration-700 ease-in-out" id="carousel-slides">
          <% featuredAnimes.forEach((anime, index)=> { %>
            <article class="relative w-full shrink-0 grid items-end text-subs">
              <div class="container z-20 grid items-start gap-4 pb-12 pt-16">
                <header class="grid items-start gap-4">
                  <h1 class="text-4xl font-semibold text-lead">
                    <%= anime.title %>
                  </h1>
                  <div class="flex flex-wrap items-center gap-2 text-sm">
                    <span>
                      <%= anime.type || 'TV Anime' %>
                    </span>
                    <span>•</span>
                    <span>
                      <%= anime.year || new Date().getFullYear() %>
                    </span>
                    <span>•</span>
                    <span
                      class="<%= anime.status === 'En emisión' ? 'flex gap-2 after:h-1.5 after:w-1.5 after:animate-pulse after:rounded-full after:bg-wins after:ring-4 after:ring-wins/20' : '' %>">
                      <%= anime.status || 'Desconocido' %>
                    </span>
                  </div>
                  <% if (anime.genres && anime.genres.length> 0) { %>
                    <div class="flex flex-wrap items-center gap-2">
                      <% anime.genres.forEach(genre=> { %>
                        <a class="btn btn-xs rounded-full border-line bg-transparent text-subs hover:bg-main hover:text-fore"
                          href="https://animeav1.com/catalogo?genre=<%= encodeURIComponent(genre.toLowerCase()) %>"
                          target="_blank">
                          <%= genre %>
                        </a>
                        <% }); %>
                    </div>
                    <% } %>
                </header>
                <% if (anime.description) { %>
                  <div class="max-w-lg text-lead line-clamp-4">
                    <p>
                      <%= anime.description %>
                    </p>
                  </div>
                  <% } %>
                    <div class="mt-2 flex flex-wrap gap-3">
                      <a class="btn btn-primary" href="/media/<%= anime.slug %>">
                        <i class="fas fa-play text-2xl"></i> Ver Anime
                      </a>
                    </div>
              </div>
              <div class="absolute inset-0 z-10">
                <figure class="absolute inset-0">
                  <img class="h-full w-full object-cover" src="<%= anime.backdrop || anime.poster %>"
                    alt="<%= anime.title %> Backdrop" loading="<%= index === 0 ? 'eager' : 'lazy' %>"
                    onerror="this.style.display='none'" />
                  <div class="absolute inset-0 bg-gradient-to-r from-body/90 via-body/60 to-transparent"></div>
                  <div class="absolute inset-0 bg-gradient-to-t from-body/80 via-transparent to-transparent"></div>
                  <div class="absolute inset-0" style="background: radial-gradient(ellipse at center, transparent 30%, rgba(19,19,23,0.4) 70%, rgba(19,19,23,0.8) 100%)"></div>
                </figure>
              </div>
            </article>
            <% }); %>
        </div>

        <% if (featuredAnimes.length> 1) { %>
          <div class="absolute inset-x-0 bottom-12 z-30 hidden items-end justify-between sm:flex container">
            <div class="flex items-center gap-2">
              <div class="flex gap-1" id="carousel-indicators">
                <% featuredAnimes.forEach((anime, index)=> { %>
                  <button
                    class="w-2 h-2 rounded-full bg-white/30 hover:bg-white/60 transition-colors carousel-indicator <%= index === 0 ? 'bg-white' : '' %>"
                    data-slide="<%= index %>"></button>
                  <% }); %>
              </div>
              <div class="text-xs text-white/70 ml-2" id="carousel-counter">
                <span id="current-slide">1</span> / <span id="total-slides">
                  <%= featuredAnimes.length %>
                </span>
              </div>
              <div class="w-16 h-1 bg-white/20 rounded-full ml-2 overflow-hidden">
                <div class="h-full bg-main rounded-full transition-all duration-100 ease-linear" id="progress-bar"
                  style="width: 0%"></div>
              </div>
            </div>
            <div>
              <button class="btn btn-sm border-line p-2 text-xl hover:bg-main hover:text-fore" id="carousel-prev">
                <i class="fas fa-chevron-left"></i>
              </button>
              <button class="btn btn-sm border-line p-2 text-xl hover:bg-main hover:text-fore" id="carousel-next">
                <i class="fas fa-chevron-right"></i>
              </button>
            </div>
          </div>
          <% } %>
      </div>
    </section>
    <% } %>

      <main class="py-6">
        <div class="container">
          <!-- Recent Episodes Section -->
          <section class="grid items-start gap-4 py-3" id="recent-episodes">
            <header class="flex flex-wrap items-center justify-between gap-4">
              <div class="grid items-start gap-1">
                <h2 class="text-2xl font-bold text-lead">Episodios</h2>
                <p class="text-xs font-bold uppercase tracking-widest text-subs">Recientemente Actualizado</p>
              </div>
            </header>

            <% if (recentEpisodes && recentEpisodes.length> 0) { %>
              <div class="grid grid-cols-2 gap-4 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-4 xl:gap-6">
                <% recentEpisodes.forEach((episode, index)=> { %>
                  <article
                    class="group/item relative text-text bg-soft rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow">
                    <div class="relative">
                      <figure class="bg-black">
                        <img class="aspect-video w-full object-cover transition-all group-hover/item:opacity-75"
                          src="<%= episode.poster %>" alt="<%= episode.title %>" loading="lazy"
                          onerror="this.src='/placeholder-episode.jpg'" />
                        <% if (episode.timeAgo) { %>
                          <span
                            class="absolute inset-0 grid place-content-end rounded-lg bg-gradient-to-tl from-soft px-3 py-2 text-xs font-bold text-subs">
                            <%= episode.timeAgo %>
                          </span>
                          <% } %>

                      </figure>
                      <% if (episode.episodeNumber) { %>
                        <div
                          class="absolute bottom-0 start-0 z-10 flex gap-2 rounded-se-lg pe-1 pt-1 sm:pe-2 sm:pt-2" style="background-color: rgb(var(--body));">
                          <div class="bg-soft px-2 py-1 text-xs font-bold text-subs" style="border-radius: 0.25rem 0.25rem 0 0;">EP <span
                              class="font-bold text-lead">
                              <%= episode.episodeNumber %>
                            </span></div>
                        </div>
                        <% } %>
                          <div
                            class="absolute inset-0 bg-black/60 opacity-0 group-hover/item:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                            <button
                              class="download-episode-btn bg-main hover:bg-main/80 text-fore w-12 h-12 rounded-full transition-all duration-200 flex items-center justify-center"
                              data-title="<%= episode.title %>" data-link="<%= episode.link %>"
                              title="Descargar <%= episode.title %>">
                              <i class="fas fa-download text-xl"></i>
                            </button>
                          </div>
                    </div>
                    <header class="grid items-start gap-1 p-2">
                      <% if (episode.animeSlug) { %>
                        <a href="/media/<%= episode.animeSlug %>" class="text-xs font-bold uppercase text-subs line-clamp-2 hover:text-main transition-colors">
                          <%= episode.title %>
                        </a>
                      <% } else { %>
                        <div class="text-xs font-bold uppercase text-subs line-clamp-2">
                          <%= episode.title %>
                        </div>
                      <% } %>
                    </header>
                  </article>
                  <% }); %>
              </div>
              <% } else { %>
                <div class="text-center py-12">
                  <i class="fas fa-film text-4xl text-subs mb-4"></i>
                  <p class="text-subs">No hay episodios recientes disponibles</p>
                </div>
                <% } %>
          </section>

          <!-- Recent Animes Section -->
          <section class="grid items-start gap-6 py-3">
            <header class="flex flex-wrap items-center justify-between gap-4">
              <div class="grid items-start gap-1">
                <h2 class="text-2xl font-bold text-lead">Animes</h2>
                <p class="text-xs font-bold uppercase tracking-widest text-subs">Recientemente Agregados</p>
              </div>
              <div>
                <a class="btn btn-sm border-line" href="https://animeav1.com/catalogo" target="_blank">
                  <i class="fas fa-th-large text-xl"></i> Catálogo de Animes
                </a>
              </div>
            </header>

            <% if (recentAnimes && recentAnimes.length> 0) { %>
              <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 xl:grid-cols-5 xl:gap-6">
                <% recentAnimes.forEach((anime, index)=> { %>
                  <article class="group/item relative text-text">
                    <div class="relative" style="background-color: rgb(var(--body));">
                      <figure class="rounded-lg bg-black">
                        <img class="aspect-poster w-full rounded-lg object-cover" src="<%= anime.poster %>"
                          alt="Portada de <%= anime.title %>" onerror="this.src='/placeholder-anime.jpg'" />
                      </figure>
                      <div class="absolute bottom-0 start-0 z-10 flex gap-2 rounded-se-lg pe-2 pt-2" style="background-color: rgb(var(--body));">
                        <div class="rounded bg-line px-2 py-1 text-xs font-bold text-subs">
                          <%= anime.type || 'TV Anime' %>
                        </div>
                      </div>
                    </div>
                    <header class="grid items-start gap-1 p-2">
                      <h3 class="line-clamp-2 text-sm font-bold text-lead">
                        <%= anime.title %>
                      </h3>
                    </header>
                    <a class="absolute inset-0 z-20 grid place-content-center" href="/media/<%= anime.slug %>"
                      title="Ver <%= anime.title %>">
                      <span class="sr-only">Ver <%= anime.title %></span>
                    </a>
                  </article>
                  <% }); %>
              </div>
              <% } else { %>
                <div class="text-center py-12">
                  <i class="fas fa-tv text-4xl text-subs mb-4"></i>
                  <p class="text-subs">No hay animes recientes disponibles</p>
                </div>
                <% } %>
          </section>
        </div>
      </main>

      <%- include('partials/footer') %>

      <script src="/js/index.js"></script>

      <!-- Mobile Search Modal -->
      <div class="fixed inset-0 bg-black/50 z-50 hidden" id="mobile-search-modal">
        <div class="absolute top-4 left-4 right-4 bg-soft border border-line rounded-lg p-4">
          <form method="get" action="/search" class="flex gap-2">
            <input type="search" name="q" placeholder="Buscar anime..."
              class="flex-1 bg-mute border border-line rounded-lg px-4 py-2 text-text placeholder-subs focus:border-main focus:outline-none"
              id="mobile-search-input">
            <button type="submit" class="px-4 py-2 bg-main text-fore rounded-lg hover:opacity-90">
              <i class="fas fa-search"></i>
            </button>
            <button type="button" class="px-4 py-2 bg-line text-subs rounded-lg hover:bg-edge" id="close-mobile-search">
              <i class="fas fa-times"></i>
            </button>
          </form>
        </div>
      </div>
</body>

</html>