<%- include('partials/header', {
  pageTitle: 'Catálogo de Animes - AnimeHub',
  htmlClass: 'dark',
  bodyClass: 'bg-body text-text font-body min-h-screen flex flex-col'
}) %>

  <main class="py-6 flex-1">
    <div class="container">
      <!-- Search Hero Section -->
      <section class="section-shell text-center py-12 px-6 mb-8">
        <div class="max-w-2xl mx-auto">
              <h1 class="text-4xl font-bold text-lead mb-4 flex items-center justify-center gap-3">
                <i class="fas fa-search icon-gradient"></i>
                <span>Catálogo de Animes</span>
              </h1>
          <p class="text-lg text-subs mb-8">Explora y filtra nuestra colección completa</p>

          <div class="max-w-lg mx-auto">
            <form method="get" action="/search" autocomplete="off">
              <div class="relative">
                <input
                  class="input-field pr-12"
                  type="search"
                  name="q"
                  value="<%= query %>"
                  placeholder="Buscar anime por nombre, género o año..."
                  autocomplete="off"
                >
                <button type="submit" class="absolute right-3 top-1/2 transform -translate-y-1/2 p-2 text-subs transition-colors cursor-pointer icon-hover-gradient icon-btn">
                  <i class="fas fa-search text-lg icon-gradient-hover"></i>
                </button>
              </div>
            </form>
          </div>
        </div>
      </section>

      <!-- Filters Section -->
      <section class="section-shell p-6 mb-8 overflow-visible filters-shell">
        <!-- Alphabetic Filter -->
        <div class="flex gap-2 flex-wrap justify-center mb-6">
          <button class="pill text-xs font-bold hover:border-main hover:text-lead hover:-translate-y-0.5 transition-all <%= currentLetter === '#' ? 'bg-main text-fore border-main' : '' %>"
                  onclick="filterByLetter('#')">#</button>
          <% for (let i = 65; i <= 90; i++) { %>
            <% const letter = String.fromCharCode(i); %>
            <button class="pill text-xs font-bold hover:border-main hover:text-lead hover:-translate-y-0.5 transition-all <%= currentLetter === letter ? 'bg-main text-fore border-main' : '' %>"
                    onclick="filterByLetter('<%= letter %>')"><%= letter %></button>
          <% } %>
        </div>

        <!-- Advanced Filters -->
        <div class="flex flex-wrap gap-4 mb-6">
          <div class="select-shell w-56 z-40" data-select>
            <select class="select-field sr-only" id="categoryFilter">
              <option value="">Tipo: Todos</option>
              <% if (filters && filters.categories) { %>
                <% filters.categories.forEach(category => { %>
                  <option value="<%= category.slug %>" <%= currentCategory === category.slug ? 'selected' : '' %>><%= category.name %></option>
                <% }); %>
              <% } %>
            </select>
            <button type="button" class="select-button" data-select-trigger>Tipo: Todos</button>
            <div class="select-menu hidden" data-select-menu>
              <button class="select-option" type="button" data-value="">Tipo: Todos</button>
              <% if (filters && filters.categories) { %>
                <% filters.categories.forEach(category => { %>
                  <button class="select-option" type="button" data-value="<%= category.slug %>"><%= category.name %></button>
                <% }); %>
              <% } %>
            </div>
          </div>

          <div class="select-shell w-56 z-40" data-select>
            <select class="select-field sr-only" id="genreFilter">
              <option value="">Género: Todos</option>
              <% if (filters && filters.genres) { %>
                <% filters.genres.forEach(genre => { %>
                  <option value="<%= genre.slug %>" <%= currentGenre === genre.slug ? 'selected' : '' %>><%= genre.name %></option>
                <% }); %>
              <% } %>
            </select>
            <button type="button" class="select-button" data-select-trigger>Género: Todos</button>
            <div class="select-menu hidden" data-select-menu>
              <button class="select-option" type="button" data-value="">Género: Todos</button>
              <% if (filters && filters.genres) { %>
                <% filters.genres.forEach(genre => { %>
                  <button class="select-option" type="button" data-value="<%= genre.slug %>"><%= genre.name %></button>
                <% }); %>
              <% } %>
            </div>
          </div>

          <div class="relative">
            <button type="button" id="yearDropdownBtn" class="input-field w-44 flex items-center justify-between">
              <span id="yearDropdownLabel">Año: Seleccionar</span>
              <i class="fas fa-chevron-down text-xs transition-transform" id="yearDropdownIcon"></i>
            </button>
            <div id="yearDropdown" class="absolute top-full left-0 mt-1 bg-soft border border-line rounded-lg p-4 shadow-lg z-50 w-44 hidden">
              <div>
                <label class="text-sm text-subs mb-2 block">Rango de años</label>
                <div class="dual-range-slider mb-3">
                  <input type="range" id="minYear" min="1990" max="2025" value="1990" class="range-input range-min">
                  <input type="range" id="maxYear" min="1990" max="2025" value="2025" class="range-input range-max">
                  <div class="slider-track"></div>
                  <div class="slider-range" id="sliderRange"></div>
                </div>
                <div class="flex justify-between text-xs text-subs">
                  <span id="minYearValue">1990</span>
                  <span id="maxYearValue">2025</span>
                </div>
              </div>
            </div>
          </div>

          <div class="select-shell w-56 z-40" data-select>
            <select class="select-field sr-only" id="statusFilter">
              <option value="">Estado: Todos</option>
              <option value="completed" <%= currentStatus === 'completed' ? 'selected' : '' %>>Completado</option>
              <option value="ongoing" <%= currentStatus === 'ongoing' ? 'selected' : '' %>>En emisión</option>
              <option value="upcoming" <%= currentStatus === 'upcoming' ? 'selected' : '' %>>Próximamente</option>
            </select>
            <button type="button" class="select-button" data-select-trigger>Estado: Todos</button>
            <div class="select-menu hidden" data-select-menu>
              <button class="select-option" type="button" data-value="">Estado: Todos</button>
              <button class="select-option" type="button" data-value="completed">Completado</button>
              <button class="select-option" type="button" data-value="ongoing">En emisión</button>
              <button class="select-option" type="button" data-value="upcoming">Próximamente</button>
            </div>
          </div>
        </div>

        <div class="flex flex-wrap items-center justify-between gap-4">
          <button class="btn btn-primary cursor-pointer" onclick="applyFilters()">
            <i class="fas fa-filter mr-2"></i>Aplicar Filtros
          </button>

          <div class="select-shell w-64 z-40" data-select>
            <select class="select-field sr-only" id="sortFilter">
              <option value="default" <%= currentOrder === 'default' ? 'selected' : '' %>>Ordenar: Predeterminado</option>
              <option value="title" <%= currentOrder === 'title' ? 'selected' : '' %>>Título A-Z</option>
              <option value="year" <%= currentOrder === 'year' ? 'selected' : '' %>>Año</option>
              <option value="rating" <%= currentOrder === 'rating' ? 'selected' : '' %>>Puntuación</option>
            </select>
            <button type="button" class="select-button" data-select-trigger>Ordenar: Predeterminado</button>
            <div class="select-menu hidden" data-select-menu>
              <button class="select-option" type="button" data-value="default">Ordenar: Predeterminado</button>
              <button class="select-option" type="button" data-value="title">Título A-Z</button>
              <button class="select-option" type="button" data-value="year">Año</button>
              <button class="select-option" type="button" data-value="rating">Puntuación</button>
            </div>
          </div>
        </div>
      </section>

      <!-- Results Section -->
      <section>
        <div class="mb-6">
          <% if (animes && animes.length > 0) { %>
            <h2 class="text-2xl font-bold text-lead mb-2 flex items-center gap-3">
              <i class="fas fa-check-circle text-wins"></i>
              <span>Resultados del Catálogo</span>
            </h2>
            <p class="text-sm text-subs"><%= totalResults || 0 %> animes encontrados</p>
          <% } else { %>
            <h2 class="text-2xl font-bold text-lead mb-2 flex items-center gap-3">
              <i class="fas fa-exclamation-circle text-warn"></i>
              <span>Sin resultados</span>
            </h2>
          <% } %>
        </div>

        <% if (animes && animes.length === 0) { %>
          <div class="section-shell text-center py-16 px-6">
            <div class="text-4xl mb-4 text-line">
              <i class="fas fa-search"></i>
            </div>
            <h3 class="text-xl text-lead mb-2">No se encontraron resultados</h3>
            <p class="text-subs mb-6">Intenta con otros filtros de búsqueda</p>
            <div class="text-left max-w-md mx-auto">
              <p class="text-sm font-semibold text-lead mb-2">Sugerencias:</p>
              <ul class="text-sm text-subs space-y-1">
                <li>• Usa filtros más generales</li>
                <li>• Verifica los términos de búsqueda</li>
                <li>• Intenta con otros géneros o años</li>
                <li>• Limpia todos los filtros</li>
              </ul>
            </div>
          </div>
        <% } else { %>
          <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 xl:grid-cols-5 xl:gap-6">
            <% animes.forEach((anime) => { %>
              <%- include('partials/card-anime', { anime, variant: 'grid' }) %>
            <% }); %>
          </div>
        <% } %>

        <!-- Pagination -->
        <% if (pagination && pagination.totalPages > 1) { %>
          <div class="flex flex-wrap gap-2 justify-center mt-8">
            <% if (pagination.currentPage > 1) { %>
              <a class="bg-soft border border-line rounded px-3 py-2 text-subs transition-colors hover-gradient" 
                 href="<%= buildPaginationUrl(pagination.currentPage - 1, req.query) %>">«</a>
            <% } %>

            <% if (pagination.currentPage > 3) { %>
              <a class="bg-soft border border-line rounded px-3 py-2 text-subs transition-colors hover-gradient" 
                 href="<%= buildPaginationUrl(1, req.query) %>">1</a>
              <% if (pagination.currentPage > 4) { %>
                <span class="px-3 py-2 text-subs">...</span>
              <% } %>
            <% } %>

            <% 
              const startPage = Math.max(1, pagination.currentPage - 2);
              const endPage = Math.min(pagination.totalPages, pagination.currentPage + 2);
            %>
            
            <% for (let i = startPage; i <= endPage; i++) { %>
              <% if (i === pagination.currentPage) { %>
                <span class="bg-main text-fore border border-main rounded px-3 py-2 font-bold select-none cursor-default"><%= i %></span>
              <% } else { %>
                <a class="bg-soft border border-line rounded px-3 py-2 text-subs transition-colors hover-gradient" 
                   href="<%= buildPaginationUrl(i, req.query) %>"><%= i %></a>
              <% } %>
            <% } %>

            <% if (pagination.currentPage < pagination.totalPages - 2) { %>
              <% if (pagination.currentPage < pagination.totalPages - 3) { %>
                <span class="px-3 py-2 text-subs">...</span>
              <% } %>
              <a class="bg-soft border border-line rounded px-3 py-2 text-subs transition-colors hover-gradient" 
                 href="<%= buildPaginationUrl(pagination.totalPages, req.query) %>"><%= pagination.totalPages %></a>
            <% } %>

            <% if (pagination.currentPage < pagination.totalPages) { %>
              <a class="bg-soft border border-line rounded px-3 py-2 text-subs transition-colors hover-gradient" 
                 href="<%= buildPaginationUrl(pagination.currentPage + 1, req.query) %>">»</a>
            <% } %>
          </div>
        <% } %>
      </section>
    </div>
  </main>

  <%- include('partials/footer') %>

  <script>
    function initCustomSelects() {
      const selects = document.querySelectorAll('[data-select]');

      selects.forEach(wrapper => {
        const select = wrapper.querySelector('select');
        const trigger = wrapper.querySelector('[data-select-trigger]');
        const menu = wrapper.querySelector('[data-select-menu]');
        const options = menu ? Array.from(menu.querySelectorAll('[data-value]')) : [];

        if (!select || !trigger || !menu) return;

        const syncLabel = () => {
          const selected = select.options[select.selectedIndex];
          trigger.textContent = selected ? selected.textContent : trigger.textContent;
        };

        syncLabel();

        trigger.addEventListener('click', (e) => {
          e.stopPropagation();
          document.querySelectorAll('[data-select-menu]').forEach(m => {
            if (m !== menu) m.classList.add('hidden');
          });
          menu.classList.toggle('hidden');
        });

        options.forEach(option => {
          option.addEventListener('click', () => {
            const value = option.getAttribute('data-value');
            select.value = value;
            syncLabel();
            menu.classList.add('hidden');
          });
        });
      });

      document.addEventListener('click', () => {
        document.querySelectorAll('[data-select-menu]').forEach(m => m.classList.add('hidden'));
      });
    }

    function filterByLetter(letter) {
      const url = new URL(window.location);
      url.searchParams.set('letter', letter);
      url.searchParams.delete('page');
      window.location.href = url.toString();
    }

    function applyFilters() {
      const url = new URL(window.location);
      
      const category = document.getElementById('categoryFilter').value;
      const genre = document.getElementById('genreFilter').value;
      const minYear = document.getElementById('minYear').value;
      const maxYear = document.getElementById('maxYear').value;
      const status = document.getElementById('statusFilter').value;
      const order = document.getElementById('sortFilter').value;
      
      if (category) url.searchParams.set('category', category);
      else url.searchParams.delete('category');
      
      if (genre) url.searchParams.set('genre', genre);
      else url.searchParams.delete('genre');
      
      if (minYear !== '1990') url.searchParams.set('minYear', minYear);
      else url.searchParams.delete('minYear');
      
      if (maxYear !== '2025') url.searchParams.set('maxYear', maxYear);
      else url.searchParams.delete('maxYear');
      
      if (status) url.searchParams.set('status', status);
      else url.searchParams.delete('status');
      
      if (order && order !== 'default') url.searchParams.set('order', order);
      else url.searchParams.delete('order');
      
      url.searchParams.delete('page');
      window.location.href = url.toString();
    }

    // Year dropdown functionality
    function toggleYearDropdown() {
      const dropdown = document.getElementById('yearDropdown');
      const icon = document.getElementById('yearDropdownIcon');
      
      if (dropdown.classList.contains('hidden')) {
        dropdown.classList.remove('hidden');
        icon.style.transform = 'rotate(180deg)';
      } else {
        dropdown.classList.add('hidden');
        icon.style.transform = 'rotate(0deg)';
      }
    }
    

    
    function updateYearDisplay() {
      const min = parseInt(document.getElementById('minYear').value);
      const max = parseInt(document.getElementById('maxYear').value);
      const label = document.getElementById('yearDropdownLabel');
      const minValue = document.getElementById('minYearValue');
      const maxValue = document.getElementById('maxYearValue');
      const sliderRange = document.getElementById('sliderRange');
      
      minValue.textContent = min;
      maxValue.textContent = max;
      
      if (min === 1990 && max === 2025) {
        label.textContent = 'Año: Seleccionar';
      } else if (min === max) {
        label.textContent = `Año: ${min}`;
      } else {
        label.textContent = `Año: ${min} - ${max}`;
      }
      
      const minPercent = ((min - 1990) / (2025 - 1990)) * 100;
      const maxPercent = ((max - 1990) / (2025 - 1990)) * 100;
      sliderRange.style.left = minPercent + '%';
      sliderRange.style.width = (maxPercent - minPercent) + '%';
    }

    document.addEventListener('DOMContentLoaded', function() {
      initCustomSelects();
      // Year dropdown setup
      const yearBtn = document.getElementById('yearDropdownBtn');
      const minYearSlider = document.getElementById('minYear');
      const maxYearSlider = document.getElementById('maxYear');
      
      yearBtn.addEventListener('click', toggleYearDropdown);
      
      // Close dropdown when clicking outside
      document.addEventListener('click', function(e) {
        const dropdown = document.getElementById('yearDropdown');
        const btn = document.getElementById('yearDropdownBtn');
        if (!dropdown.contains(e.target) && !btn.contains(e.target)) {
          dropdown.classList.add('hidden');
          document.getElementById('yearDropdownIcon').style.transform = 'rotate(0deg)';
        }
      });
      
      minYearSlider.addEventListener('input', function() {
        if (parseInt(this.value) > parseInt(maxYearSlider.value)) {
          maxYearSlider.value = this.value;
        }
        updateYearDisplay();
      });
      
      maxYearSlider.addEventListener('input', function() {
        if (parseInt(this.value) < parseInt(minYearSlider.value)) {
          minYearSlider.value = this.value;
        }
        updateYearDisplay();
      });
      
      // Auto-close dropdown on change
      minYearSlider.addEventListener('change', function() {
        setTimeout(() => {
          document.getElementById('yearDropdown').classList.add('hidden');
          document.getElementById('yearDropdownIcon').style.transform = 'rotate(0deg)';
        }, 300);
      });
      
      maxYearSlider.addEventListener('change', function() {
        setTimeout(() => {
          document.getElementById('yearDropdown').classList.add('hidden');
          document.getElementById('yearDropdownIcon').style.transform = 'rotate(0deg)';
        }, 300);
      });
      
      // Set initial values from URL
      const urlParams = new URLSearchParams(window.location.search);
      const urlMinYear = urlParams.get('minYear');
      const urlMaxYear = urlParams.get('maxYear');
      
      if (urlMinYear) minYearSlider.value = urlMinYear;
      if (urlMaxYear) maxYearSlider.value = urlMaxYear;
      updateYearDisplay();
      
      // Image retry logic
      document.querySelectorAll('img').forEach(img => {
        let retries = 0;
        const maxRetries = 3;
        
        img.addEventListener('error', function() {
          if (retries < maxRetries) {
            retries++;
            setTimeout(() => {
              this.src = this.src + (this.src.includes('?') ? '&' : '?') + 't=' + Date.now();
            }, 1000 * retries);
          }
        });
      });
    });
  </script>
</body>
</html>
